{
	"name": "Outlook Email Spam Checker",
	"version": "1.0",
	"description": "A Chrome extension to check for spam and remove emails from a user's Outlook mailbox",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"<all_urls>",
		"identity",
		"https://graph.microsoft.com/",
		"*://*.outlook.com/*"
	],
	"content_scripts": [
    	{
       	"matches": ["*://*.outlook.com/*"],
       	"js": ["contentScript.js"]
    	}
  ]
}